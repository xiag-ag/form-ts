{
  "version": "0.0.0",
  "private": true,
  "license": "UNLICENSED",
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {},
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.33.1",
    "@typescript-eslint/parser": "^5.33.1",
    "eslint": "^8.43.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "lerna": "^7.1.3",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.1.6"
  },
  "scripts": {
    "version:patch": "lerna version --no-changelog --no-push patch",
    "version:minor": "lerna version --no-changelog --no-push minor",
    "version:major": "lerna version --no-changelog --no-push major",
    "start": "run-p --silent --continue-on-error 'start:core' 'start:react' 'start:demo'",
    "start:core": "yarn workspace '@form-ts/core' run watch",
    "start:react": "yarn workspace '@form-ts/react' run watch",
    "start:demo": "yarn workspace '@form-ts/demo' run watch",
    "build": "run-s --silent 'build:core' 'build:react' 'build:demo'",
    "build:core": "yarn workspace '@form-ts/core' run build",
    "build:react": "yarn workspace '@form-ts/react' run build",
    "build:demo": "yarn workspace '@form-ts/demo' run build",
    "check": "run-p --silent --continue-on-error 'check:core' 'check:react' 'check:demo'",
    "check:core": "yarn workspace '@form-ts/core' run check",
    "check:react": "yarn workspace '@form-ts/react' run check",
    "check:demo": "yarn workspace '@form-ts/demo' run check",
    "test": "yarn workspace '@form-ts/core' run test",
    "lint": "run-p --silent --continue-on-error 'lint:core' 'lint:react' 'lint:demo'",
    "lint:core": "yarn workspace '@form-ts/core' run lint",
    "lint:react": "yarn workspace '@form-ts/react' run lint",
    "lint:demo": "yarn workspace '@form-ts/demo' run lint"
  }
}
